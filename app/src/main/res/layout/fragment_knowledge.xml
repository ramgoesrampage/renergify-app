<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".KnowledgeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        tools:ignore="ExtraText"
        android:layout_marginTop="25dp">


        <!-- Back Button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <!-- Knowledge Center Title -->
        <TextView
            android:id="@+id/knowledge_center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Knowledge Center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_below="@id/back_button"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true" />

        <!-- Image Placeholder -->
        <ImageView
            android:id="@+id/knowledge_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/knowledge_center_title"
            android:src="@drawable/renewableenergy" />

        <!-- Description Text -->
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is Renewable Energy: \n\nRenewable energy is energy derived from natural resources that are replenished naturally, such as sunlight, wind, and geothermal heat. It is considered environmentally friendly because it produces little or no pollution. \n\nExamples include solar energy, wind energy, hydropower, and biomass."
            android:textSize="16sp"
            android:layout_below="@id/knowledge_image"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
</FrameLayout>
